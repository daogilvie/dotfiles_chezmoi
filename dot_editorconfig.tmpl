# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,py}]
indent_style = space
charset = utf-8

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[*.{json,js,jsx,ts,tsx,svelte}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.lua]
indent_style = space
indent_size = 2
