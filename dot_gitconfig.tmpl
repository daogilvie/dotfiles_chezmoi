[column]
    ui = auto
[branch]
    sort = -committerdate
[core]
	excludesfile = {{ .chezmoi.homeDir }}/.gitignore_global
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
    external = difft
[fetch]
    prune = true
    pruneTags = true
    all = true
[user]
    name = Drum Ogilvie
    useConfigOnly = true
	email = {{ .email }}
    signingkey = {{ .chezmoi.homeDir }}/{{ (onepasswordItemFields .op_ssh_uuid).pubfile.value }}
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[merge]
	conflictStyle = zdiff3
[alias]
	publish = push -u origin HEAD
[init]
	defaultBranch = main
[pull]
	rebase = true
[gpg]
	format = ssh
[commit]
	gpgsign = true
[tag]
	gpgsign = true
	sort = version:refname
[gpg "ssh"]
	allowedSignersFile = {{ .chezmoi.homeDir }}/.config/git/allowed_signers
[help]
	autocorrect = prompt
[rebase]
	autosquash = true
	autostash = true
	updateRefs = true
[rerere]
    enabled = true
    autoupdate = true
[advice]
	macheteEditorSelection = false
